<h2>投稿フォーム</h2>

  <%= form_with model: @post_tea do |f| %>
  <table class="table">
    <tr>
      <td><%= f.label :image %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :title %></td>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <td><%= f.label :introduction %></td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td><%= f.label :kind %></td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--お茶の種類--" %></td>
    </tr>
  </table>

    <%= f.submit '投稿' %>
  <% end %>